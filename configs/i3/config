bar {
    colors {
        background #262626
        statusline #ebdbb2
        separator #4b5262
        #                       border background text
        focused_workspace       #AFD787 #AFD787 #1d2021
        active_workspace        #504945 #504945 #1d2021
        inactive_workspace      #504945 #504945 #1d2021
        urgent_workspace        #cc241d #D75F5F #1d2021
    }
    separator_symbol "::"
    status_command i3status
